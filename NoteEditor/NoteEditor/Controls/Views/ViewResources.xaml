<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <DataTemplate x:Key="SectionDataTemplate"  DataType="x:Type local:Section">
        <StackPanel>
            <TextBlock Text="{Binding Path=Id}"/>
            <TextBlock Text="{Binding Path=Title}"/>
        </StackPanel>
    </DataTemplate>
    
    <DataTemplate x:Key="NoteListItemDataTemplate" DataType="x:Type local:Note">
        <TextBlock Text="{Binding Path=Title}"/>
    </DataTemplate>
    
    <HierarchicalDataTemplate x:Key="SectionHierarchicalTemplate"
                              DataType="x:Type local:SectionViewModel"
                              ItemsSource="{Binding Sections}"
                              ItemTemplate="{StaticResource NoteListItemDataTemplate}"
                              >
        <TextBlock Text="{Binding Path=Title}"/>
        
    </HierarchicalDataTemplate>
</ResourceDictionary>